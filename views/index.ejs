<% include Share/_header.ejs %>
<% include Share/_menu.ejs %>

<!-- Swiper -->
<div id="featuredGallery">
  <div class="navGallery">
    <span class="arrowLeft"></span>
    <span class="arrowRight"></span>
  </div>
  <div class="container swiper-container">
    <div class="wrapper swiper-wrapper">
      <a id="s1" class="galleryItem swiper-slide" href="#" rel="bookmark">
        <div class="thImage b-lazy" data-src="/images/slide/slide01.jpg"></div>
      </a>
      <a id="s2" class="galleryItem swiper-slide" href="#" rel="bookmark">
        <div class="thImage b-lazy" data-src="/images/slide/slide02.jpg"></div>
      </a>
      <a id="s3" class="galleryItem swiper-slide" href="#" rel="bookmark">
        <div class="thImage b-lazy" data-src="/images/slide/slide03.jpg"></div>
      </a>
      <a id="s4" class="galleryItem swiper-slide" href="#" rel="bookmark">
        <div class="thImage b-lazy" data-src="/images/slide/slide04.jpg"></div>
      </a>
      <a id="s5" class="galleryItem swiper-slide" href="#" rel="bookmark">
        <div class="thImage b-lazy" data-src="/images/slide/slide05.jpg"></div>
      </a>
    </div>
  </div>
</div>

<div class="pages inner">

  <% category.forEach(function(ctg,key){ %>
  <div class="ctgBlock cBlk_<%= key %>">
    <div class="blockHead">
      <div class="bLeft"><%= ctg["ctgName"][lgkey] %> <%- ctg["ctgBrief"]?"<span class=\"ctgBrief\">"+ctg["ctgBrief"][lgkey]+"</span>":"" %> </div>
      <div class="bRight">
        <a href="javascript:;" class="ctgMore prev"><span><%= langs["prev"][lgkey] %></span></a>
        <a href="javascript:;" class="ctgMore next"><span><%= langs["next"][lgkey] %></span></a>
      </div>
    </div>
    <div class="ctgList col-<%= ctg["colNumb"]?ctg["colNumb"]:4 %>">
      <ul>
        <% ctg["ctgList"].forEach(function(obj,k){ if(k<8){ %>
        <li class="li_<%=k%> <%=(k)%ctg["colNumb"]<=0?'fRow':'' %>">
          <a href="/video/<%= obj["ctgid"] %>" class="ctgLink">
            <p class="ctgImgBox">
              <img src="/images/pro/<%= obj["img"] %>" class="ctgImg" alt="">
              <span class="vTime">24:24</span>
            </p>
            <p class="ctgTitle"><%= obj["ctgTitle"][lgkey] %></p>
            <p class="ctgOvs"><%= obj["ctgOvs"][lgkey] %></p>
            <p class="view">5,600 <%= langs["views"][lgkey] %> - 2 <%= langs["hago"][lgkey] %></p>
          </a>
        </li>
        <% }}) %>
      </ul>
      <div class="mobile liMore">
        <a href="javascript:;" class="mBtn liPrev"><span>prev</span></a>
        <a href="javascript:;" class="mBtn liNext"><span>next</span></a>
      </div>
    </div>
  </div>
  <% }) %>

</div>

<script src="/javascripts/scroll_config.js"></script>

<% include Share/_footer.ejs %>